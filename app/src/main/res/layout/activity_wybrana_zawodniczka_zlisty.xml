<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.domi.fightlapyapp.zawodniczkaActivities.WybranaZawodniczkaZListyActivity">

    <TextView
        android:id="@+id/wybrana_zaw_z_listy"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:fontFamily="monospace"
        android:padding="10dip"
        android:textAlignment="center"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="20sp"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_editor_absoluteX="0dp" />

    <TextView
        android:id="@+id/numerZawodniczki"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:fontFamily="monospace"
        android:padding="10dip"
        android:textAlignment="center"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="20sp"
        app:layout_constraintTop_toBottomOf="@+id/wybrana_zaw_z_listy"
        tools:layout_editor_absoluteX="0dp" />

    <TextView
        android:id="@+id/idPozycji"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:fontFamily="monospace"
        android:padding="10dip"
        android:textAlignment="center"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="20sp"
        app:layout_constraintTop_toBottomOf="@+id/numerZawodniczki"
        tools:layout_editor_absoluteX="0dp" />

    <TextView
        android:id="@+id/idZawodniczki"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:fontFamily="monospace"
        android:padding="10dip"
        android:textAlignment="center"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="20sp"
        app:layout_constraintTop_toBottomOf="@+id/idPozycji"
        tools:layout_editor_absoluteX="0dp" />

    <TextView
        android:id="@+id/lista_wydarzen_zawodniczkiTV"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:fontFamily="monospace"
        android:padding="10dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:text="@string/lista_wydarzen_zawodniczki"
        android:textAlignment="center"
        android:textColor="@android:color/black"
        android:textSize="18sp"
        app:layout_constraintTop_toBottomOf="@+id/idZawodniczki"
        tools:layout_editor_absoluteX="0dp" />

    <ListView
        android:id="@+id/lista_wydarzen_nie_zawodniczki"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:background="@android:color/holo_red_light"
        app:layout_constraintHorizontal_bias="1"
        app:layout_constraintTop_toBottomOf="@+id/lista_wydarzen_tak_zawodniczki"
        tools:layout_editor_absoluteX="0dp" />

    <ListView
        android:id="@+id/lista_wydarzen_tbc_zawodniczki"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:background="@android:color/holo_purple"
        app:layout_constraintHorizontal_bias="1"
        app:layout_constraintTop_toBottomOf="@+id/lista_wydarzen_nie_zawodniczki"
        tools:layout_editor_absoluteX="0dp" />

    <ListView
        android:id="@+id/lista_wydarzen_tak_zawodniczki"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="17dp"
        android:background="@android:color/holo_green_light"
        app:layout_constraintTop_toBottomOf="@+id/lista_wydarzen_zawodniczkiTV"
        tools:layout_editor_absoluteX="0dp" />

</android.support.constraint.ConstraintLayout>
