<ScrollView  xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.domi.fightlapyapp.DodanieWydarzeniaActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

    <Spinner
        android:id="@+id/spinner_wydarzenie"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:entries="@array/event_arrays"
        android:prompt="@string/event_prompt"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/data"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="16dp"
            android:fontFamily="monospace"
            android:hint="Data"
            android:padding="15dp"
            android:textAlignment="viewStart"
            android:textSize="18sp"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/spinner_wydarzenie" />

        <TextView
            android:id="@+id/godzina"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:ems="10"
            android:fontFamily="monospace"
            android:hint="@string/godzina_wydarzenia"
            android:padding="15dp"
            android:textSize="18sp"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/data" />

    <android.support.design.widget.TextInputLayout
        android:id="@+id/input_layout_miejsce"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@+id/godzina"
        tools:layout_editor_absoluteX="8dp">

        <EditText
            android:id="@+id/miejsce"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:drawableTint="@color/colorPrimary"
            android:ems="10"
            android:fontFamily="monospace"
            android:hint="@string/miejsce_wydarzenie"
            android:inputType="text"
            android:maxLines="1"
            android:padding="15dp"
            android:textSize="18sp"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/godzina" />
    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:id="@+id/input_layout_cena"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@+id/input_layout_miejsce"
        tools:layout_editor_absoluteX="8dp">

        <EditText
            android:id="@+id/cena_wydarzenia"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:ems="10"
            android:fontFamily="monospace"
            android:hint="@string/cena_wydarzenia"
            android:inputType="number"
            android:maxLines="1"
            android:padding="15dp"
            android:textSize="18sp"
            app:layout_constraintHorizontal_bias="0.497"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tytul" />
    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:id="@+id/input_layout_tytul"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@+id/input_layout_cena"
        tools:layout_editor_absoluteX="8dp">

        <EditText
            android:id="@+id/tytul"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:backgroundTint="@color/colorPrimary"
            android:drawableTint="@color/colorPrimary"
            android:fontFamily="monospace"
            android:hint="@string/tytul_wydarzenia"
            android:maxLines="1"
            android:padding="15dp"
            android:textSize="18sp"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/miejsce" />
    </android.support.design.widget.TextInputLayout>

        <Button
            android:id="@+id/zapisz"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:fontFamily="monospace"
            android:hint="@string/zapisz_zawodniczke"
            android:onClick="zapiszWydarzenie"
            android:text="@string/zapisz_zawodniczke"
            android:textSize="24sp"
            app:layout_constraintTop_toBottomOf="@+id/input_layout_tytul"
            tools:layout_editor_absoluteX="148dp" />

    <![CDATA[
    />
]]>
    </LinearLayout>
</ScrollView>
<!--</android.support.constraint.ConstraintLayout>-->
